<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Button Style -->
    <style name="BaseButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:elevation">4dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:scrollHorizontally">false</item>
    </style>

    <!-- Number Buttons -->
    <style name="NumberButton" parent="BaseButton">
        <item name="android:background">@drawable/bg_number</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#E8E8E8</item>
    </style>

    <!-- Wide Number Button -->
    <style name="NumberButton.Wide" parent="NumberButton">
        <item name="android:layout_weight">2</item>
    </style>

    <!-- Operator Buttons -->
    <style name="OperatorButton" parent="BaseButton">
        <item name="android:background">@drawable/bg_operator</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Function Buttons -->
    <style name="FunctionButton" parent="BaseButton">
        <item name="android:background">@drawable/bg_function</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Advanced Buttons - Perfect Spacing -->
    <style name="AdvancedButton" parent="BaseButton">
        <item name="android:background">@drawable/bg_advanced</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minEms">0</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Equals Button -->
    <style name="EqualsButton" parent="BaseButton">
        <item name="android:background">@drawable/bg_equals</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
