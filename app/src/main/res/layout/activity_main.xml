<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:clipToPadding="false">

    <!-- TOP: Display Area (30% height) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.30"
        android:orientation="vertical"
        android:gravity="bottom"
        android:padding="16dp"
        android:background="#111111">

        <!-- Mode Indicator & Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvModeIndicator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DEG | BASIC"
                android:textColor="#888888"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnToggleMode"
                android:layout_width="70dp"
                android:layout_height="32dp"
                android:text="ADV"
                android:textSize="11sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@drawable/bg_toggle" />
        </LinearLayout>

        <!-- Expression Display -->
        <TextView
            android:id="@+id/tvExpression"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="end|bottom"
            android:textColor="#B0B0B0"
            android:textSize="18sp"
            android:maxLines="2"
            android:ellipsize="start"
            android:fontFamily="monospace"
            android:padding="4dp" />

        <!-- Result Display -->
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:maxLines="1"
            android:ellipsize="start"
            android:fontFamily="sans-serif-light"
            android:minHeight="48dp"
            android:padding="4dp" />
    </LinearLayout>

    <!-- BOTTOM: Button Panel (70% height) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.70"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#111111"
        android:gravity="bottom">

        <!-- ADVANCED ROW 1 (4 buttons) -->
        <LinearLayout
            android:id="@+id/layoutAdvanced1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp"
            android:visibility="gone">

            <Button android:id="@+id/btnSin" style="@style/AdvancedButton" android:text="sin" />
            <Button android:id="@+id/btnCos" style="@style/AdvancedButton" android:text="cos" />
            <Button android:id="@+id/btnTan" style="@style/AdvancedButton" android:text="tan" />
            <Button android:id="@+id/btnDegRad" style="@style/AdvancedButton" android:text="DEG" />
        </LinearLayout>

        <!-- ADVANCED ROW 2 (4 buttons) -->
        <LinearLayout
            android:id="@+id/layoutAdvanced2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp"
            android:visibility="gone">

            <Button android:id="@+id/btnLog" style="@style/AdvancedButton" android:text="log" />
            <Button android:id="@+id/btnLn" style="@style/AdvancedButton" android:text="ln" />
            <Button android:id="@+id/btnSqrt" style="@style/AdvancedButton" android:text="√" />
            <Button android:id="@+id/btnPower" style="@style/AdvancedButton" android:text="x^y" />
        </LinearLayout>

        <!-- ADVANCED ROW 3 (4 buttons) -->
        <LinearLayout
            android:id="@+id/layoutAdvanced3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp"
            android:visibility="gone">

            <Button android:id="@+id/btnLeftParen" style="@style/AdvancedButton" android:text="(" />
            <Button android:id="@+id/btnRightParen" style="@style/AdvancedButton" android:text=")" />
            <Button android:id="@+id/btnPi" style="@style/AdvancedButton" android:text="π" />
            <Button android:id="@+id/btnFactorial" style="@style/AdvancedButton" android:text="x!" />
        </LinearLayout>

        <!-- BASIC ROW 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <Button android:id="@+id/btnAC" style="@style/FunctionButton" android:text="AC" />
            <Button android:id="@+id/btnBackspace" style="@style/FunctionButton" android:text="⌫" />
            <Button android:id="@+id/btnPercent" style="@style/FunctionButton" android:text="%" />
            <Button android:id="@+id/btnDivide" style="@style/OperatorButton" android:text="÷" />
        </LinearLayout>

        <!-- BASIC ROW 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <Button android:id="@+id/btn7" style="@style/NumberButton" android:text="7" />
            <Button android:id="@+id/btn8" style="@style/NumberButton" android:text="8" />
            <Button android:id="@+id/btn9" style="@style/NumberButton" android:text="9" />
            <Button android:id="@+id/btnMultiply" style="@style/OperatorButton" android:text="×" />
        </LinearLayout>

        <!-- BASIC ROW 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <Button android:id="@+id/btn4" style="@style/NumberButton" android:text="4" />
            <Button android:id="@+id/btn5" style="@style/NumberButton" android:text="5" />
            <Button android:id="@+id/btn6" style="@style/NumberButton" android:text="6" />
            <Button android:id="@+id/btnSubtract" style="@style/OperatorButton" android:text="−" />
        </LinearLayout>

        <!-- BASIC ROW 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <Button android:id="@+id/btn1" style="@style/NumberButton" android:text="1" />
            <Button android:id="@+id/btn2" style="@style/NumberButton" android:text="2" />
            <Button android:id="@+id/btn3" style="@style/NumberButton" android:text="3" />
            <Button android:id="@+id/btnAdd" style="@style/OperatorButton" android:text="+" />
        </LinearLayout>

        <!-- BASIC ROW 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <Button android:id="@+id/btn0" style="@style/NumberButton.Wide" android:text="0" />
            <Button android:id="@+id/btnDecimal" style="@style/NumberButton" android:text="." />
            <Button android:id="@+id/btnEquals" style="@style/EqualsButton" android:text="=" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
