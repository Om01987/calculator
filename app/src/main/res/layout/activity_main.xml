<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#000000">

    <!-- Display Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#000000"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <!-- Toggle Button -->
        <Button
            android:id="@+id/btnToggleMode"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:text="ADV"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:background="@drawable/bg_toggle"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Expression Display -->
        <TextView
            android:id="@+id/tvExpression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#666666"
            android:gravity="end"
            android:padding="8dp"
            android:minHeight="32dp" />

        <!-- Result Display -->
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="0"
            android:textSize="36sp"
            android:textColor="#ffffff"
            android:gravity="center_vertical|end"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Advanced Functions Row (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/layoutAdvanced1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btnSin"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="sin"
            android:textSize="16sp"
            android:background="@drawable/bg_advanced"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnCos"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="cos"
            android:textSize="16sp"
            android:background="@drawable/bg_advanced"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnTan"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="tan"
            android:textSize="16sp"
            android:background="@drawable/bg_advanced"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnLog"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="log"
            android:textSize="16sp"
            android:background="@drawable/bg_advanced"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnLn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="ln"
            android:textSize="16sp"
            android:background="@drawable/bg_advanced"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

    </LinearLayout>

    <!-- Advanced Functions Row 2 (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/layoutAdvanced2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btnSqrt"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="√"
            android:textSize="20sp"
            android:background="@drawable/bg_advanced"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnPower"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="x²"
            android:textSize="16sp"
            android:background="@drawable/bg_advanced"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnPowerY"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="xʸ"
            android:textSize="16sp"
            android:background="@drawable/bg_advanced"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnPi"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="π"
            android:textSize="20sp"
            android:background="@drawable/bg_advanced"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnE"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="e"
            android:textSize="16sp"
            android:background="@drawable/bg_advanced"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

    </LinearLayout>

    <!-- Basic Calculator Rows -->
    <!-- Row 1: AC, CE, ⌫, ÷ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnAC"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="AC"
            android:textSize="20sp"
            android:background="@drawable/bg_function"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnCE"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="CE"
            android:textSize="20sp"
            android:background="@drawable/bg_function"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnBackspace"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="⌫"
            android:textSize="20sp"
            android:background="@drawable/bg_function"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="÷"
            android:textSize="24sp"
            android:background="@drawable/bg_operator"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

    </LinearLayout>

    <!-- Row 2: 7, 8, 9, × -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="24sp"
            android:background="@drawable/bg_number"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="8"
            android:textSize="24sp"
            android:background="@drawable/bg_number"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="9"
            android:textSize="24sp"
            android:background="@drawable/bg_number"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="×"
            android:textSize="24sp"
            android:background="@drawable/bg_operator"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

    </LinearLayout>

    <!-- Row 3: 4, 5, 6, - -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="24sp"
            android:background="@drawable/bg_number"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="5"
            android:textSize="24sp"
            android:background="@drawable/bg_number"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="6"
            android:textSize="24sp"
            android:background="@drawable/bg_number"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="24sp"
            android:background="@drawable/bg_operator"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

    </LinearLayout>

    <!-- Row 4: 1, 2, 3, + -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="24sp"
            android:background="@drawable/bg_number"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="24sp"
            android:background="@drawable/bg_number"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="24sp"
            android:background="@drawable/bg_number"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="24sp"
            android:background="@drawable/bg_operator"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

    </LinearLayout>

    <!-- Row 5: +/-, 0, %, . -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnPlusMinus"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="+/-"
            android:textSize="18sp"
            android:background="@drawable/bg_function"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="0"
            android:textSize="24sp"
            android:background="@drawable/bg_number"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnPercent"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="%"
            android:textSize="24sp"
            android:background="@drawable/bg_function"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnDecimal"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="."
            android:textSize="24sp"
            android:background="@drawable/bg_number"
            android:textColor="#ffffff"
            android:layout_margin="4dp" />

    </LinearLayout>

    <!-- Row 6: Equals -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="="
            android:textSize="24sp"
            android:background="@drawable/bg_equals"
            android:textColor="#000000"
            android:layout_margin="4dp" />

    </LinearLayout>

</LinearLayout>
