<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_main">

    <!-- TOP: Display Area with Enhanced Styling -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="bottom"
        android:padding="20dp"
        android:background="@drawable/bg_display_area">

        <!-- Toggle Button with Better Positioning -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btnToggleMode"
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:text="ADV"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@drawable/bg_toggle"
                android:elevation="6dp"
                android:fontFamily="sans-serif-medium" />
        </RelativeLayout>

        <!-- Expression Display with Enhanced Styling -->
        <TextView
            android:id="@+id/tvExpression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="#B0B0B0"
            android:textSize="26sp"
            android:minLines="1"
            android:maxLines="3"
            android:ellipsize="start"
            android:layout_marginBottom="12dp"
            android:fontFamily="monospace"
            android:lineSpacingExtra="4dp"
            android:padding="8dp"
            android:background="@drawable/bg_expression_display" />

        <!-- Result Display with Enhanced Styling -->
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="52sp"
            android:maxLines="1"
            android:ellipsize="start"
            android:fontFamily="sans-serif-light"
            android:padding="12dp"
            android:background="@drawable/bg_result_display"
            android:elevation="2dp" />
    </LinearLayout>

    <!-- BOTTOM: Enhanced Button Panel -->
    <LinearLayout
        android:id="@+id/button_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/bg_button_panel"
        android:elevation="8dp">

        <!-- ADVANCED ROW 1: Trigonometric Functions -->
        <LinearLayout
            android:id="@+id/layoutAdvanced1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginBottom="6dp"
            android:background="@drawable/bg_advanced_row"
            android:padding="4dp"
            android:elevation="2dp">
            <Button android:id="@+id/btnSin" style="@style/CalculatorButton.Advanced" android:text="sin" />
            <Button android:id="@+id/btnCos" style="@style/CalculatorButton.Advanced" android:text="cos" />
            <Button android:id="@+id/btnTan" style="@style/CalculatorButton.Advanced" android:text="tan" />
            <Button android:id="@+id/btnLog" style="@style/CalculatorButton.Advanced" android:text="log" />
            <Button android:id="@+id/btnLn" style="@style/CalculatorButton.Advanced" android:text="ln" />
        </LinearLayout>

        <!-- ADVANCED ROW 2: Advanced Operations & Constants -->
        <LinearLayout
            android:id="@+id/layoutAdvanced2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginBottom="6dp"
            android:background="@drawable/bg_advanced_row"
            android:padding="4dp"
            android:elevation="2dp">
            <Button android:id="@+id/btnLeftParen" style="@style/CalculatorButton.Advanced" android:text="(" />
            <Button android:id="@+id/btnRightParen" style="@style/CalculatorButton.Advanced" android:text=")" />
            <Button android:id="@+id/btnSqrt" style="@style/CalculatorButton.Advanced" android:text="√" />
            <Button android:id="@+id/btnPower" style="@style/CalculatorButton.Advanced" android:text="x^y" />
            <Button android:id="@+id/btnPi" style="@style/CalculatorButton.Advanced" android:text="π" />
        </LinearLayout>

        <!-- ADVANCED ROW 3: Additional Functions -->
        <LinearLayout
            android:id="@+id/layoutAdvanced3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_advanced_row"
            android:padding="4dp"
            android:elevation="2dp">
            <Button android:id="@+id/btnFactorial" style="@style/CalculatorButton.Advanced" android:text="x!" />
            <Button android:id="@+id/btnE" style="@style/CalculatorButton.Advanced" android:text="e" />
            <Button android:id="@+id/btnExp" style="@style/CalculatorButton.Advanced" android:text="exp" />
            <Button android:id="@+id/btnMod" style="@style/CalculatorButton.Advanced" android:text="mod" />
            <Button android:id="@+id/btnAbs" style="@style/CalculatorButton.Advanced" android:text="|x|" />
        </LinearLayout>

        <!-- BASIC ROW 1: Functions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">
            <Button android:id="@+id/btnAC" style="@style/CalculatorButton.Function" android:text="AC" />
            <Button android:id="@+id/btnBackspace" style="@style/CalculatorButton.Function" android:text="⌫" />
            <Button android:id="@+id/btnPercent" style="@style/CalculatorButton.Function" android:text="%" />
            <Button android:id="@+id/btnDivide" style="@style/CalculatorButton.Operator" android:text="÷" />
        </LinearLayout>

        <!-- BASIC ROW 2: Numbers 7-9 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">
            <Button android:id="@+id/btn7" style="@style/CalculatorButton.Number" android:text="7" />
            <Button android:id="@+id/btn8" style="@style/CalculatorButton.Number" android:text="8" />
            <Button android:id="@+id/btn9" style="@style/CalculatorButton.Number" android:text="9" />
            <Button android:id="@+id/btnMultiply" style="@style/CalculatorButton.Operator" android:text="×" />
        </LinearLayout>

        <!-- BASIC ROW 3: Numbers 4-6 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">
            <Button android:id="@+id/btn4" style="@style/CalculatorButton.Number" android:text="4" />
            <Button android:id="@+id/btn5" style="@style/CalculatorButton.Number" android:text="5" />
            <Button android:id="@+id/btn6" style="@style/CalculatorButton.Number" android:text="6" />
            <Button android:id="@+id/btnSubtract" style="@style/CalculatorButton.Operator" android:text="−" />
        </LinearLayout>

        <!-- BASIC ROW 4: Numbers 1-3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">
            <Button android:id="@+id/btn1" style="@style/CalculatorButton.Number" android:text="1" />
            <Button android:id="@+id/btn2" style="@style/CalculatorButton.Number" android:text="2" />
            <Button android:id="@+id/btn3" style="@style/CalculatorButton.Number" android:text="3" />
            <Button android:id="@+id/btnAdd" style="@style/CalculatorButton.Operator" android:text="+" />
        </LinearLayout>

        <!-- BASIC ROW 5: Bottom Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button android:id="@+id/btn0" style="@style/CalculatorButton.Number.Wide" android:text="0" />
            <Button android:id="@+id/btnDecimal" style="@style/CalculatorButton.Number" android:text="." />
            <Button android:id="@+id/btnEquals" style="@style/CalculatorButton.Equals" android:text="=" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
