            <gradient
                android:startColor="#1B5E20"
                android:endColor="#2E7D32"
                android:angle="135" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#388E3C"
                android:endColor="#43A047"
                android:angle="135" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>
