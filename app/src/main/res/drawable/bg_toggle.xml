<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1B5E20"
                android:endColor="#2E7D32"
                android:angle="135" />
            <corners android:radius="24dp" />
            <stroke android:width="2dp" android:color="#FFFFFF" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#388E3C"
                android:endColor="#43A047"
                android:angle="135" />
            <corners android:radius="24dp" />
            <stroke android:width="1dp" android:color="#66BB6A" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#424242"
                android:endColor="#616161"
                android:angle="135" />
            <corners android:radius="24dp" />
            <stroke android:width="1dp" android:color="#757575" />
        </shape>
    </item>
</selector>
